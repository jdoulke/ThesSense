<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/fullscreen_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_fullscreen"
                android:contentDescription="@string/fullscreen_icon_desc"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:tint="@color/thess"
                android:background="@drawable/fullscreen_background"
                android:padding="4dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|top"
            android:padding="16dp">

            <NumberPicker
                android:id="@+id/year_picker"
                android:theme="@style/NumberPickerStyleYear"
                android:selectionDividerHeight="1.3dp"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginEnd="20dp" />

            <NumberPicker
                android:id="@+id/month_picker"
                android:theme="@style/NumberPickerStyleMonth"
                android:selectionDividerHeight="1.3dp"
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:layout_marginStart="20dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ενδεικτικά όρια ποιότητας νερού:"
            android:textSize="21sp"
            android:fontFamily="@font/lexend_medium"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blue" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:fadingEdgeLength="64dp"
            android:requiresFadingEdge="horizontal"
            android:overScrollMode="always"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_container"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:backgroundTint="@color/blue"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Θολότητα"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/lexend_light"
                            android:textColor="@color/thess"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="≤ 1 NTU"
                            android:textSize="22sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="24dp"
                            android:fontFamily="@font/lexend_bold"
                            android:textColor="@color/thess" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:backgroundTint="@color/cyan"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Χρώμα"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/lexend_light"
                            android:textColor="@color/thess"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="≤ 15 mg/l\nPt-Co"
                            android:textSize="20sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="24dp"
                            android:gravity="center"
                            android:fontFamily="@font/lexend_bold"
                            android:textColor="@color/thess" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:backgroundTint="@color/petrol"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Αργίλιο"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/lexend_light"
                            android:textColor="@color/thess"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="≤ 200 μg/l"
                            android:textSize="20sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="24dp"
                            android:gravity="center"
                            android:fontFamily="@font/lexend_bold"
                            android:textColor="@color/thess" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:backgroundTint="@color/blue"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Χλωριούχα"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/lexend_light"
                            android:textColor="@color/thess"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="≤ 250 mg/l"
                            android:textSize="20sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="24dp"
                            android:gravity="center"
                            android:fontFamily="@font/lexend_bold"
                            android:textColor="@color/thess" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:backgroundTint="@color/cyan"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Αγωγιμότητα"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/lexend_light"
                            android:textColor="@color/thess"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="≤ 2500 μS/cm\nστους 20°C"
                            android:textSize="19sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="24dp"
                            android:gravity="center"
                            android:fontFamily="@font/lexend_bold"
                            android:textColor="@color/thess" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:backgroundTint="@color/petrol"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pH"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/lexend_light"
                            android:textColor="@color/thess"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6,5 - 9,5"
                            android:textSize="21sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="24dp"
                            android:gravity="center"
                            android:fontFamily="@font/lexend_bold"
                            android:textColor="@color/thess" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:backgroundTint="@color/blue"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Υπολειμματικό\nΧλώριο"
                            android:layout_marginTop="24dp"
                            android:gravity="center"
                            android:fontFamily="@font/lexend_light"
                            android:textColor="@color/thess"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0,2 - 1,0 mg/l"
                            android:textSize="20sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="24dp"
                            android:gravity="center"
                            android:fontFamily="@font/lexend_bold"
                            android:textColor="@color/thess" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>